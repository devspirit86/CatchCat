<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="spirit.parttime.cat"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="4"
        android:targetSdkVersion="26" />

    <supports-screens android:anyDensity="true" />

    <application
        android:debuggable="true"
        android:icon="@drawable/icon"
        android:label="@string/app_name"
        android:testOnly="true" >

        <!-- <supports-screens  android:largeScreens="true"/> -->
        <activity
            android:name="spirit.parttime.cat.ShowLogo"
            android:screenOrientation="landscape" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="spirit.parttime.cat.Menu"
            android:screenOrientation="landscape" >
        </activity>
        <activity
            android:name="spirit.parttime.cat.Game"
            android:screenOrientation="landscape" >
        </activity>
        <activity
            android:name="spirit.parttime.cat.GameMenu"
            android:screenOrientation="landscape"
            android:theme="@android:style/Theme.Translucent.NoTitleBar" >
        </activity>
        <activity
            android:name="spirit.parttime.cat.MessageActivity"
            android:screenOrientation="landscape"
            android:theme="@android:style/Theme.Translucent.NoTitleBar" >
        </activity>

        <provider
            android:name="com.android.tools.ir.server.InstantRunContentProvider"
            android:authorities="spirit.parttime.cat.com.android.tools.ir.server.InstantRunContentProvider"
            android:multiprocess="true" />
    </application>

</manifest>